
<div class="card-product">
  <%= cl_image_tag @bike.image.key, height: 200, width: 200 %>
  <div class="card-product-infos">
    <h1><%= @bike.name%></h1>
    <h2><%= @bike.model%></h2>
    <p><%= @bike.description%></p>
    <p><%= @bike.location%></p>
    <p><%= @bike.year%></p>
    <h2><%= @bike.price%></h2>
  </div>
</div>

<br>

 <%# <div class="btn"><%= link_to "home", bikes_path, class: "nav-link" %>
<div class="btn"><%= link_to "create a Booking", new_bike_booking_path(@bike), class: "nav-link" %></div>
<% if @bike.user == current_user %>
<div class="btn"><%= link_to "edit", edit_bike_path(@bike), class: "nav-link" %></div>
<% end %>
<% if @bike.user == current_user %>
<div class="btn"><%= link_to "delete", bike_path(@bike), method: :delete, data: { confirm: "Are you sure?" }, class: "nav-link" %></div>
<% end %>
