<h1> OUR BIKES</h1>
<h2>click on it to create a booking</h2>

  <div class="cards">
    <div class="co-12 col-sm-6 col-md-4">
      <% @bikes.each do |bike| %>
        <% if bike.image.attached? %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path bike.image.key, height: 200, crop: :fill %>')">
          <% else %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1571068316344-75bc76f77890?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80.jpg)">
              <div class="bottomalign">
                <h2 class="bottomtext">Cycle 1</h2>
                <p class="bottomtier"> Posted by user </p>
              </div>
            </div>
        <% end %>
          <h2 class="bottomalign"><%= link_to bike.name, bike_path(bike), class: "text-white"%></h2>
    </div>
  </div>
  <% end %>
<br>
  <%= link_to "Back to home", root_path %>
